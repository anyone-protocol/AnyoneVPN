<?xml version="1.0" encoding="utf-8"?>

<resources>
    <style name="DefaultTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/background</item>
    </style>

    <style name="NavigationGroupMenuHeaders">
        <item name="android:textColor">@color/menu_header</item>
    </style>

    <style name="AnyoneBotActivityTheme" parent="Theme.AppCompat">
        <item name="android:windowBackground">@color/background</item>
        <item name="android:windowIsFloating">false</item>
        <item name="colorPrimary">@color/background</item>
        <item name="colorPrimaryDark">@color/background</item>

    </style>

    <style name="AnyoneBotDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center|left</item>
    </style>
</resources>

